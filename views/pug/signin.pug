doctype html
html(lang='ko')
    head
        include layout
    body
        include navHeader
        each val, i in messages
            div.flash messages[i]
        form(action="/signin" method="post")
            div
                label Username:
                input(type="text" name="username")
            div
                label Password:
                input(type="password" name="password")
            div
                input(type="submit" value="Sign In")
        footer
            include footer
        include script